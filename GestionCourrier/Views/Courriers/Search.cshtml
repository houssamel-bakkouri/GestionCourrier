@model IEnumerable<GestionCourrier.Models.Courrier>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<p>
   
    <div class="form-group">
        
        <div class="col-md-10">
           <input type="text" placeholder="Search" class="form-control" style="margin-bottom:50px"/>
        </div>
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CoordoneeExpediteur)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nature)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCourrier)
        </th>
